# Legion Framework - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Enable OS integration layer
LEGION_OS_ENABLED=true

# Application environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database connection URL
# Examples:
#   SQLite:     sqlite:///./legion.db
#   PostgreSQL: postgresql://user:password@localhost:5432/legion
#   MySQL:      mysql://user:password@localhost:3306/legion
DATABASE_URL=postgresql://legion:legion@localhost:5432/legion

# Connection pool configuration
POOL_SIZE=20
MAX_OVERFLOW=10
POOL_TIMEOUT=30
POOL_RECYCLE=3600

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis connection URL for caching
REDIS_URL=redis://localhost:6379/0

# Redis pool configuration
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# API KEYS (Optional)
# ============================================================================

# OpenAI API key for AI integration
OPENAI_API_KEY=

# Anthropic API key for Claude integration
ANTHROPIC_API_KEY=

# Google API credentials (for Sheets integration)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ============================================================================
# SUPABASE CONFIGURATION (Optional)
# ============================================================================

SUPABASE_URL=
SUPABASE_KEY=

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus metrics endpoint
PROMETHEUS_PORT=9090

# Grafana configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Global rate limit (requests per minute)
GLOBAL_RATE_LIMIT=1000

# Per-user rate limit (requests per minute)
PER_USER_RATE_LIMIT=100

# ============================================================================
# SECURITY
# ============================================================================

# Secret key for session management
SECRET_KEY=your-secret-key-here-change-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# BROWSER AUTOMATION (Optional)
# ============================================================================

# Playwright browser type (chromium, firefox, webkit)
BROWSER_TYPE=chromium

# Headless mode
HEADLESS=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode (DO NOT use in production!)
DEBUG=false

# Enable auto-reload
AUTO_RELOAD=true

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Number of worker processes
WORKERS=4

# Worker timeout (seconds)
WORKER_TIMEOUT=30

# Keep-alive timeout
KEEP_ALIVE=5

# ============================================================================
# OPTIONAL FEATURES
# ============================================================================

# Enable distributed execution with Ray
ENABLE_RAY=false
RAY_ADDRESS=

# Enable vector store with ChromaDB
ENABLE_CHROMADB=true
CHROMADB_PATH=./data/chromadb

# Enable task queue
ENABLE_TASK_QUEUE=true
